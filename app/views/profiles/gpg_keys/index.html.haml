- page_title "GPG Keys"
= render 'profiles/head'

.row.prepend-top-default
  .col-lg-3.profile-settings-sidebar
    %h4.prepend-top-0
      = page_title
    %p
      GPG keys allow you to verify signed commits.
  .col-lg-9
    %h5.prepend-top-0
      Add an GPG key
    = render 'form'
    %hr
    %h5
      Your GPG keys (#{@gpg_keys.count})
    .append-bottom-default
      = render 'key_table'
