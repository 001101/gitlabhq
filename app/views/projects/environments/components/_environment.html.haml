%environment-item{"inline-template" => true, 
  "v-for" => "environment in state.environments", 
  ":model" => "environment"}
  .environment-folder-name{"@click" => "toggle"}
    %span.icon-container{"v-if" => "isFolder"}
      %i{"v-show" => "open"}
        = icon("caret-down")

      %i{"v-show" => "!open"}
        = icon("caret-right")
    %span.name-container
      {{model.name}}

