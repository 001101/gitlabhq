- @no_container = true
- page_title "Metrics for environment", @environment.name
- content_for :page_specific_javascripts do
  = page_specific_javascript_bundle_tag('common_d3')
  = page_specific_javascript_bundle_tag('monitoring')
= render "projects/pipelines/head"

%div{ class: container_class }
  .top-area
    .row
      .col-sm-6
        %h3.page-title
          Environment:
          = link_to environment_path(@environment) do
            = @environment.name

      .col-sm-6
        .nav-controls
          = render 'projects/deployments/actions', deployment: @environment.last_deployment
  .row
    .col-sm-12
      .row
        .col-sm-10
          %h4
            CPU utilization
        .col-sm-2.form-horizontal
          .form-group
            %label{ for: 'decimal_format', class:'control-label col-sm-6' }
              Format
            .col-sm-6
              %input.form-control{ name: 'decimal_format', type: 'number', value: '4', 'graph-type': 'cpu_values', min: '1' }
      %svg.prometheus-graph{ 'graph-type' => 'cpu_values' }
  .row
    .col-sm-12
      %h4
        Memory usage
      %svg.prometheus-graph{ 'graph-type' => 'memory_values' }
