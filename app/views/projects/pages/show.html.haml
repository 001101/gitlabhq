- page_title "#{@domain.domain}", "Pages Domain"

%h3.page-title
  Pages Domain

.table-holder
  %table.table
    %tr
      %td
        Domain
      %td
        = link_to @domain.domain, @domain.url
    %tr
      %td
        Certificate
      %td
        - if @domain.x509
          %pre
            = @domain.x509.to_text
        - else
          .light
            missing
