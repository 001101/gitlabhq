:javascript
  $(function(){
    var import_modal = $('#gitlab_import_modal').modal({modal: true, show:false});
    $('.how_to_import_link').bind("click", function(e){
      e.preventDefault();
      import_modal.show();
    });
    $('.modal-header .close').bind("click", function(){
      import_modal.hide();
    })
  })
