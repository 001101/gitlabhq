- if params[:status_only]
  - if @issue.valid?
    :plain
      $("##{dom_id(@issue)}").fadeOut();
- else
  - if @issue.valid?
    :plain
      $("#edit_issue_dialog").dialog("close");
      updatePage();
  - else
    :plain
      $("#edit_issue_dialog").empty();
      $("#edit_issue_dialog").append("#{escape_javascript(render('form'))}");
      $('select#issue_assignee_id').selectmenu({width:300});
