- remote = local_assigns.fetch(:remote, false)

- if @snippets.exists?
  .snippets-list-holder
    %ul.content-list
      = render partial: 'shared/snippets/snippet', collection: @snippets

    = paginate @snippets, theme: 'gitlab', remote: remote

  :javascript
    gl.SnippetsList();
- else
  = render 'shared/empty_states/snippets'
