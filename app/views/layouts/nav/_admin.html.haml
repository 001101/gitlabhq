= render 'layouts/nav/admin_settings'
.scrolling-tabs-container{ class: nav_control_class }
  .fade-left
    = icon('angle-left')
  .fade-right
    = icon('angle-right')
  %ul.nav-links.scrolling-tabs
    = nav_link(controller: %w(dashboard admin projects users groups builds runners), html_options: {class: 'home'}) do
      = link_to admin_root_path, class: 'shortcuts-tree' do
        %span
          Overview
    = nav_link(controller: %w(system_info background_jobs logs health_check requests_profiles)) do
      = link_to admin_system_info_path do
        %span
          Monitoring
    = nav_link(controller: :broadcast_messages) do
      = link_to admin_broadcast_messages_path do
        %span
          Messages
    = nav_link(controller: :hooks) do
      = link_to admin_hooks_path do
        %span
          System Hooks

    = nav_link(controller: :applications) do
      = link_to admin_applications_path do
        %span
          Applications

    = nav_link(controller: :abuse_reports) do
      = link_to admin_abuse_reports_path do
        %span
          Abuse Reports
          %span.badge.count= number_with_delimiter(AbuseReport.count(:all))

    - if akismet_enabled?
      = nav_link(controller: :spam_logs) do
        = link_to admin_spam_logs_path do
          %span
            Spam Logs
