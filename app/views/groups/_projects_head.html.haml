.nav-block
  %ul.nav-links
    = nav_link(page: group_projects_path, query: { scope: nil }) do
      = link_to group_projects_path(@group, sort: @sort), title: "All projects from the '#{@group.name}' group", data: {placement: 'right'} do
        All

    - if current_user
      = nav_link(page: group_projects_path, query: { scope: 'contributed' }) do
        = link_to group_projects_path(@group, scope: 'contributed', sort: @sort), title: "Projects from the '#{@group.name}' group you contributed to", data: {placement: 'right'} do
          Contributed
      = nav_link(page: group_projects_path, query: { scope: 'starred' }) do
        = link_to group_projects_path(@group, scope: 'starred', sort: @sort), title: "Starred projects from the '#{@group.name}' group", data: {placement: 'right'} do
          Starred

  = render 'shared/projects/controls', disable_dropdown_filters: true
