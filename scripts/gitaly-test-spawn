#!/usr/bin/env ruby

gitaly_dir = 'tmp/tests/gitaly'
cmd = %W[
  /usr/bin/env
  -u BUNDLE_GEMFILE
  HOME=#{File.expand_path('tmp/tests')}
  GEM_PATH=#{Gem.path.join(':')}
  #{gitaly_dir}/gitaly
  #{gitaly_dir}/config.toml
]

# Print the PID of the spawned process
puts spawn(*cmd, [:out, :err] => 'log/gitaly-test.log')
